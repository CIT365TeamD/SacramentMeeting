@page
@model SacramentMeeting.Pages.Songs.DeleteModel

@{
    ViewData["Title"] = "Delete Hymn";
}

<h2>Delete Hymn</h2>

<h3>Are you sure you want to delete this hymn?</h3>
<div>

    <hr />
    <div class="col-md-12 meeting-display ">
        <dl class="dl-horizontal">
            <dt class="song-display">
                @Html.DisplayNameFor(model => model.Song.Title)
            </dt>
            <dd>
                 @Html.DisplayFor(model => model.Song.Title)
            </dd>
            <dt class="song-display">
                @Html.DisplayNameFor(model => model.Song.SongID)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Song.SongID)
            </dd>
        </dl>
    </div>
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Meeting Date</th>
                <th>Shedule</th>
            </tr>
            @foreach (var item in Model.Song.SongSelections)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Meeting.MeetingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Schedule)
                    </td>
                </tr>
            }
        </table>

    </div>
</div>
    
    <form method="post">
        <input type="hidden" asp-for="Song.SongID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>


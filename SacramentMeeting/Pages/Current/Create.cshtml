@page
@model SacramentMeeting.Pages.Current.CreateModel

@{
    ViewData["Title"] = "Assign Calling";
}

<h2>Assign Calling</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Message != null)
            {<p class="text-danger">@Model.Message</p>}
            <div class="form-half">
                <fieldset class="half">
                    <div class="form-group">
                        <label asp-for="CurrentCalling.CallingID" class="control-label"></label>
                        <select asp-for="CurrentCalling.CallingID" class="form-control" asp-items="ViewBag.CallingID"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CurrentCalling.MemberID" class="control-label"></label>
                        <select asp-for="CurrentCalling.MemberID" class="form-control" asp-items="ViewBag.MemberID"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CurrentCalling.DateCalled" class="control-label"></label>
                        <input asp-for="CurrentCalling.DateCalled" class="form-control" />
                        <span asp-validation-for="CurrentCalling.DateCalled" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                    </fieldset>
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

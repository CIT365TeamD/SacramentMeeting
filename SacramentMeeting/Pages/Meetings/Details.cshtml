@page
@model SacramentMeeting.Pages.Meetings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Meeting</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Meeting.MeetingDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Meeting.MeetingDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Meeting.Calling)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Meeting.Calling.Title) 
        </dd>
<!-- Tammmy's code -->
        <dt>
            @Html.DisplayNameFor(model => model.Meeting.Prayers)
        </dt>
        
            @foreach (var item in Model.Meeting.Prayers)
            {
                <dd>
                    @item.Schedule Prayer: @item.Member.FullName<br />
                    </dd>
                    
            }
        <dt>
            @Html.DisplayNameFor(model => model.Meeting.Talks)
        </dt>
        @foreach (var item in Model.Meeting.Talks)
        {
            <dd>
                @item.Member.FullName - Topic: @item.Topic
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Meeting.SongSelections)
        </dt>
        @foreach (var item in Model.Meeting.SongSelections)
        {
            <dd>
                @item.Schedule Song: #@item.SongID @item.Song.Title
            </dd>
        }
        
     <!-- End of Tammy's Code-->   
<!-- Irena's Code-->
        
        <dd>
            <table class="table">
                <tr>
                    <th>Song Title</th>
                    <th>Schedule</th>
                </tr>
                @foreach (var item in Model.Meeting.SongSelections)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Song.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Schedule)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dd>
            <table class="table">
                <tr>
                    <th>Person</th>
                    <th>Schedule</th>
                </tr>
                @foreach (var item in Model.Meeting.Prayers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Member.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Schedule)
                        </td>
                    </tr>
                }
            </table>
        </dd>
<!-- End of Irena's code-->
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Meeting.MeetingID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

@page
@model SacramentMeeting.Pages.Meetings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Meeting</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Meeting.MeetingDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Meeting.MeetingDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Meeting.Calling)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Meeting.Calling.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Meeting.Prayers)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Meeting.Prayers)
        </dd>
        <dd>
            <table class="table">
                <tr>
                    <th>Song Title</th>
                    <th>Schedule</th>
                </tr>
                @foreach (var item in Model.Meeting.SongSelections)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Song.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Schedule)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Meeting.MeetingID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
